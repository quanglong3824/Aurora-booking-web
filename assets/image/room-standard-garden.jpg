<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="roomBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f7fafc"/>
      <stop offset="100%" style="stop-color:#edf2f7"/>
    </linearGradient>
    <linearGradient id="bedGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff"/>
      <stop offset="100%" style="stop-color:#f1f5f9"/>
    </linearGradient>
    <linearGradient id="gardenGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#68d391"/>
      <stop offset="50%" style="stop-color:#48bb78"/>
      <stop offset="100%" style="stop-color:#38a169"/>
    </linearGradient>
  </defs>
  
  <!-- Room Background -->
  <rect width="400" height="300" fill="url(#roomBg)"/>
  
  <!-- Floor -->
  <rect x="0" y="200" width="400" height="100" fill="#d69e2e" opacity="0.3"/>
  
  <!-- Back Wall -->
  <rect x="0" y="0" width="400" height="200" fill="#e2e8f0"/>
  
  <!-- Window showing garden view -->
  <rect x="250" y="50" width="120" height="80" fill="#87ceeb" stroke="#4a5568" stroke-width="2"/>
  <rect x="250" y="50" width="120" height="80" fill="url(#gardenGradient)" opacity="0.8"/>
  
  <!-- Garden elements in window -->
  <g opacity="0.9">
    <!-- Trees -->
    <circle cx="280" cy="110" r="15" fill="#38a169"/>
    <rect x="277" y="110" width="6" height="15" fill="#8b4513"/>
    
    <circle cx="320" cy="105" r="12" fill="#48bb78"/>
    <rect x="318" y="105" width="4" height="12" fill="#8b4513"/>
    
    <circle cx="340" cy="115" r="10" fill="#68d391"/>
    <rect x="338" y="115" width="4" height="10" fill="#8b4513"/>
    
    <!-- Flowers -->
    <circle cx="290" cy="120" r="2" fill="#e53e3e"/>
    <circle cx="310" cy="118" r="2" fill="#ffd700"/>
    <circle cx="330" cy="122" r="2" fill="#9f7aea"/>
  </g>
  
  <!-- Window frame -->
  <rect x="250" y="50" width="120" height="80" fill="none" stroke="#2d3748" stroke-width="3"/>
  <line x1="310" y1="50" x2="310" y2="130" stroke="#2d3748" stroke-width="2"/>
  <line x1="250" y1="90" x2="370" y2="90" stroke="#2d3748" stroke-width="2"/>
  
  <!-- Bed -->
  <rect x="50" y="120" width="120" height="80" fill="url(#bedGradient)" rx="8"/>
  <rect x="55" y="125" width="110" height="70" fill="#ffffff" rx="4"/>
  
  <!-- Pillows -->
  <rect x="60" y="130" width="25" height="15" fill="#4299e1" rx="3"/>
  <rect x="90" y="130" width="25" height="15" fill="#4299e1" rx="3"/>
  
  <!-- Bedside table -->
  <rect x="180" y="140" width="30" height="40" fill="#8b4513"/>
  <rect x="185" y="135" width="20" height="5" fill="#a0522d"/>
  
  <!-- Lamp on bedside table -->
  <rect x="192" y="125" width="6" height="15" fill="#2d3748"/>
  <ellipse cx="195" cy="120" rx="8" ry="5" fill="#ffd700" opacity="0.7"/>
  
  <!-- Chair -->
  <rect x="20" y="160" width="25" height="30" fill="#8b4513"/>
  <rect x="15" y="155" width="35" height="5" fill="#a0522d"/>
  <rect x="22" y="140" width="4" height="20" fill="#8b4513"/>
  <rect x="38" y="140" width="4" height="20" fill="#8b4513"/>
  
  <!-- TV on wall -->
  <rect x="100" y="60" width="60" height="35" fill="#2d3748" rx="3"/>
  <rect x="105" y="65" width="50" height="25" fill="#1a202c"/>
  
  <!-- Curtains -->
  <rect x="240" y="40" width="15" height="100" fill="#4299e1" opacity="0.6"/>
  <rect x="365" y="40" width="15" height="100" fill="#4299e1" opacity="0.6"/>
  
  <!-- Carpet -->
  <ellipse cx="120" cy="220" rx="60" ry="25" fill="#e53e3e" opacity="0.4"/>
  
  <!-- Decorative elements -->
  <rect x="300" y="160" width="20" height="30" fill="#38a169"/>
  <circle cx="310" cy="155" r="8" fill="#68d391"/>
  
  <!-- Room lighting -->
  <circle cx="200" cy="30" r="15" fill="#ffd700" opacity="0.5"/>
</svg>