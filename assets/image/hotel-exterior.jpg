<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600">
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E0F6FF;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="buildingGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#F5F5DC;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#D2B48C;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="glassGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#E6F3FF;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#B3D9FF;stop-opacity:0.6" />
    </linearGradient>
  </defs>
  
  <!-- Sky Background -->
  <rect width="800" height="400" fill="url(#skyGradient)"/>
  
  <!-- Ground -->
  <rect x="0" y="400" width="800" height="200" fill="#228B22"/>
  
  <!-- Main Building -->
  <rect x="200" y="150" width="400" height="350" fill="url(#buildingGradient)" stroke="#8B4513" stroke-width="2"/>
  
  <!-- Building Details -->
  <rect x="180" y="130" width="440" height="30" fill="#8B4513"/>
  <rect x="190" y="140" width="420" height="10" fill="#A0522D"/>
  
  <!-- Windows Grid -->
  <g fill="url(#glassGradient)" stroke="#4682B4" stroke-width="1">
    <!-- Floor 1 -->
    <rect x="220" y="180" width="40" height="60"/>
    <rect x="280" y="180" width="40" height="60"/>
    <rect x="340" y="180" width="40" height="60"/>
    <rect x="400" y="180" width="40" height="60"/>
    <rect x="460" y="180" width="40" height="60"/>
    <rect x="520" y="180" width="40" height="60"/>
    
    <!-- Floor 2 -->
    <rect x="220" y="260" width="40" height="60"/>
    <rect x="280" y="260" width="40" height="60"/>
    <rect x="340" y="260" width="40" height="60"/>
    <rect x="400" y="260" width="40" height="60"/>
    <rect x="460" y="260" width="40" height="60"/>
    <rect x="520" y="260" width="40" height="60"/>
    
    <!-- Floor 3 -->
    <rect x="220" y="340" width="40" height="60"/>
    <rect x="280" y="340" width="40" height="60"/>
    <rect x="340" y="340" width="40" height="60"/>
    <rect x="400" y="340" width="40" height="60"/>
    <rect x="460" y="340" width="40" height="60"/>
    <rect x="520" y="340" width="40" height="60"/>
  </g>
  
  <!-- Main Entrance -->
  <rect x="350" y="420" width="100" height="80" fill="#8B4513"/>
  <rect x="360" y="430" width="80" height="70" fill="url(#glassGradient)" stroke="#4682B4" stroke-width="2"/>
  
  <!-- Hotel Sign -->
  <rect x="300" y="160" width="200" height="40" fill="#FFD700" stroke="#B8860B" stroke-width="2"/>
  <text x="400" y="185" text-anchor="middle" font-family="serif" font-size="24" font-weight="bold" fill="#8B4513">AURORA HOTEL</text>
  
  <!-- Decorative Elements -->
  <circle cx="150" cy="300" r="30" fill="#32CD32"/>
  <circle cx="650" cy="280" r="25" fill="#32CD32"/>
  <circle cx="100" cy="450" r="20" fill="#228B22"/>
  <circle cx="700" cy="460" r="18" fill="#228B22"/>
  
  <!-- Fountain -->
  <ellipse cx="400" cy="550" rx="60" ry="20" fill="#4682B4"/>
  <circle cx="400" cy="540" r="15" fill="#87CEEB"/>
  
  <!-- Cars -->
  <rect x="50" y="480" width="60" height="25" rx="5" fill="#FF6B6B"/>
  <circle cx="65" cy="510" r="8" fill="#333"/>
  <circle cx="95" cy="510" r="8" fill="#333"/>
  
  <rect x="680" y="475" width="70" height="30" rx="5" fill="#4ECDC4"/>
  <circle cx="695" cy="510" r="10" fill="#333"/>
  <circle cx="735" cy="510" r="10" fill="#333"/>
  
  <!-- Stars for luxury effect -->
  <g fill="#FFD700">
    <polygon points="150,80 155,90 165,90 157,97 160,107 150,100 140,107 143,97 135,90 145,90" />
    <polygon points="650,60 653,67 660,67 655,72 657,79 650,75 643,79 645,72 640,67 647,67" />
    <polygon points="100,100 103,107 110,107 105,112 107,119 100,115 93,119 95,112 90,107 97,107" />
  </g>
</svg>