<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 600">
  <defs>
    <linearGradient id="servicesBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4facfe;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#00f2fe;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="serviceCard" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#fff;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#f8f9fa;stop-opacity:0.8" />
    </linearGradient>
    <radialGradient id="glow" cx="50%" cy="50%">
      <stop offset="0%" style="stop-color:#fff;stop-opacity:0.4" />
      <stop offset="100%" style="stop-color:#fff;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="600" fill="url(#servicesBg)"/>
  
  <!-- Service icons floating -->
  <!-- Restaurant icon -->
  <g transform="translate(150, 120)">
    <circle cx="40" cy="40" r="35" fill="url(#serviceCard)" stroke="#4facfe" stroke-width="2"/>
    <circle cx="40" cy="40" r="30" fill="url(#glow)"/>
    <g transform="translate(25, 25)" fill="#4facfe">
      <path d="M5 15 L25 15 L25 25 L5 25 Z"/>
      <circle cx="15" cy="10" r="3"/>
      <rect x="12" y="5" width="6" height="3"/>
      <rect x="10" y="20" width="2" height="8"/>
      <rect x="14" y="20" width="2" height="8"/>
      <rect x="18" y="20" width="2" height="8"/>
    </g>
  </g>
  
  <!-- Spa icon -->
  <g transform="translate(350, 80)">
    <circle cx="40" cy="40" r="35" fill="url(#serviceCard)" stroke="#4facfe" stroke-width="2"/>
    <circle cx="40" cy="40" r="30" fill="url(#glow)"/>
    <g transform="translate(25, 25)" fill="#4facfe">
      <circle cx="15" cy="15" r="8" fill="none" stroke="#4facfe" stroke-width="2"/>
      <path d="M8 8 Q15 2 22 8"/>
      <path d="M8 22 Q15 28 22 22"/>
      <circle cx="10" cy="10" r="1"/>
      <circle cx="20" cy="20" r="1"/>
      <circle cx="12" cy="18" r="1"/>
    </g>
  </g>
  
  <!-- Pool icon -->
  <g transform="translate(550, 100)">
    <circle cx="40" cy="40" r="35" fill="url(#serviceCard)" stroke="#4facfe" stroke-width="2"/>
    <circle cx="40" cy="40" r="30" fill="url(#glow)"/>
    <g transform="translate(25, 25)" fill="#4facfe">
      <ellipse cx="15" cy="20" rx="12" ry="6"/>
      <path d="M3 20 Q15 14 27 20" fill="none" stroke="#4facfe" stroke-width="1"/>
      <path d="M5 18 Q15 12 25 18" fill="none" stroke="#4facfe" stroke-width="1"/>
      <circle cx="8" cy="8" r="2"/>
      <circle cx="22" cy="6" r="1.5"/>
    </g>
  </g>
  
  <!-- Gym icon -->
  <g transform="translate(750, 140)">
    <circle cx="40" cy="40" r="35" fill="url(#serviceCard)" stroke="#4facfe" stroke-width="2"/>
    <circle cx="40" cy="40" r="30" fill="url(#glow)"/>
    <g transform="translate(25, 25)" fill="#4facfe">
      <rect x="5" y="13" width="20" height="4" rx="2"/>
      <circle cx="8" cy="15" r="3"/>
      <circle cx="22" cy="15" r="3"/>
      <rect x="12" y="8" width="6" height="2"/>
      <rect x="12" y="20" width="6" height="2"/>
    </g>
  </g>
  
  <!-- Conference icon -->
  <g transform="translate(950, 90)">
    <circle cx="40" cy="40" r="35" fill="url(#serviceCard)" stroke="#4facfe" stroke-width="2"/>
    <circle cx="40" cy="40" r="30" fill="url(#glow)"/>
    <g transform="translate(25, 25)" fill="#4facfe">
      <rect x="5" y="8" width="20" height="12" rx="2" fill="none" stroke="#4facfe" stroke-width="2"/>
      <rect x="8" y="12" width="14" height="6"/>
      <circle cx="12" cy="24" r="1"/>
      <circle cx="15" cy="24" r="1"/>
      <circle cx="18" cy="24" r="1"/>
    </g>
  </g>
  
  <!-- Bottom row services -->
  <!-- Concierge icon -->
  <g transform="translate(200, 380)">
    <circle cx="40" cy="40" r="35" fill="url(#serviceCard)" stroke="#4facfe" stroke-width="2"/>
    <circle cx="40" cy="40" r="30" fill="url(#glow)"/>
    <g transform="translate(25, 25)" fill="#4facfe">
      <circle cx="15" cy="8" r="4"/>
      <rect x="10" y="12" width="10" height="8" rx="2"/>
      <rect x="8" y="20" width="14" height="6" rx="1"/>
      <rect x="12" y="15" width="6" height="2"/>
    </g>
  </g>
  
  <!-- Room Service icon -->
  <g transform="translate(450, 420)">
    <circle cx="40" cy="40" r="35" fill="url(#serviceCard)" stroke="#4facfe" stroke-width="2"/>
    <circle cx="40" cy="40" r="30" fill="url(#glow)"/>
    <g transform="translate(25, 25)" fill="#4facfe">
      <rect x="5" y="15" width="20" height="8" rx="2"/>
      <rect x="8" y="10" width="14" height="3"/>
      <circle cx="10" cy="25" r="2"/>
      <circle cx="20" cy="25" r="2"/>
      <rect x="12" y="5" width="6" height="3"/>
    </g>
  </g>
  
  <!-- WiFi icon -->
  <g transform="translate(700, 400)">
    <circle cx="40" cy="40" r="35" fill="url(#serviceCard)" stroke="#4facfe" stroke-width="2"/>
    <circle cx="40" cy="40" r="30" fill="url(#glow)"/>
    <g transform="translate(25, 25)" fill="#4facfe">
      <path d="M15 20 Q10 15 5 20" fill="none" stroke="#4facfe" stroke-width="2"/>
      <path d="M15 20 Q12 17 9 20" fill="none" stroke="#4facfe" stroke-width="2"/>
      <path d="M15 20 Q20 15 25 20" fill="none" stroke="#4facfe" stroke-width="2"/>
      <path d="M15 20 Q18 17 21 20" fill="none" stroke="#4facfe" stroke-width="2"/>
      <circle cx="15" cy="22" r="2"/>
    </g>
  </g>
  
  <!-- Parking icon -->
  <g transform="translate(950, 360)">
    <circle cx="40" cy="40" r="35" fill="url(#serviceCard)" stroke="#4facfe" stroke-width="2"/>
    <circle cx="40" cy="40" r="30" fill="url(#glow)"/>
    <g transform="translate(25, 25)" fill="#4facfe">
      <rect x="5" y="8" width="20" height="14" rx="2" fill="none" stroke="#4facfe" stroke-width="2"/>
      <text x="15" y="18" text-anchor="middle" font-family="Arial" font-size="12" font-weight="bold" fill="#4facfe">P</text>
    </g>
  </g>
  
  <!-- Connecting lines -->
  <g stroke="#fff" stroke-width="1" opacity="0.3" fill="none">
    <path d="M190 160 Q300 200 390 120"/>
    <path d="M390 120 Q500 150 590 140"/>
    <path d="M590 140 Q700 180 790 180"/>
    <path d="M790 180 Q850 150 990 130"/>
    <path d="M240 420 Q350 450 490 460"/>
    <path d="M490 460 Q600 440 740 440"/>
    <path d="M740 440 Q850 420 990 400"/>
  </g>
  
  <!-- Floating particles -->
  <g fill="#fff" opacity="0.6">
    <circle cx="100" cy="200" r="2"/>
    <circle cx="300" cy="300" r="1.5"/>
    <circle cx="500" cy="250" r="2"/>
    <circle cx="800" cy="300" r="1.5"/>
    <circle cx="1100" cy="200" r="2"/>
    <circle cx="150" cy="450" r="1"/>
    <circle cx="600" cy="500" r="1.5"/>
    <circle cx="1000" cy="500" r="2"/>
  </g>
  
  <!-- Central glow effect -->
  <ellipse cx="600" cy="300" rx="400" ry="200" fill="url(#glow)"/>
</svg>