<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="deluxeRoomBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f7fafc"/>
      <stop offset="100%" style="stop-color:#edf2f7"/>
    </linearGradient>
    <linearGradient id="luxuryBed" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff"/>
      <stop offset="100%" style="stop-color:#f8f9fa"/>
    </linearGradient>
    <linearGradient id="poolWater" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#63b3ed"/>
      <stop offset="50%" style="stop-color:#4299e1"/>
      <stop offset="100%" style="stop-color:#3182ce"/>
    </linearGradient>
  </defs>
  
  <!-- Room Background -->
  <rect width="400" height="300" fill="url(#deluxeRoomBg)"/>
  
  <!-- Marble Floor -->
  <rect x="0" y="180" width="400" height="120" fill="#f1f5f9"/>
  <g opacity="0.3">
    <path d="M0,200 Q100,190 200,200 T400,200" stroke="#cbd5e0" stroke-width="1" fill="none"/>
    <path d="M0,220 Q150,210 300,220 T400,220" stroke="#cbd5e0" stroke-width="1" fill="none"/>
    <path d="M0,240 Q80,235 160,240 T400,240" stroke="#cbd5e0" stroke-width="1" fill="none"/>
  </g>
  
  <!-- Back Wall -->
  <rect x="0" y="0" width="400" height="180" fill="#e2e8f0"/>
  
  <!-- Large Window with Pool View -->
  <rect x="220" y="30" width="150" height="100" fill="#87ceeb" stroke="#2d3748" stroke-width="3"/>
  
  <!-- Pool View -->
  <rect x="220" y="30" width="150" height="100" fill="url(#poolWater)"/>
  
  <!-- Pool deck -->
  <rect x="220" y="110" width="150" height="20" fill="#d69e2e" opacity="0.6"/>
  
  <!-- Pool elements -->
  <g opacity="0.9">
    <!-- Water ripples -->
    <ellipse cx="250" cy="70" rx="15" ry="3" fill="#ffffff" opacity="0.3"/>
    <ellipse cx="300" cy="85" rx="20" ry="4" fill="#ffffff" opacity="0.2"/>
    <ellipse cx="340" cy="65" rx="12" ry="2" fill="#ffffff" opacity="0.4"/>
    
    <!-- Pool chairs -->
    <rect x="330" y="115" width="12" height="8" fill="#ffd700"/>
    <rect x="350" y="115" width="12" height="8" fill="#ffd700"/>
    
    <!-- Umbrellas -->
    <line x1="325" y1="115" x2="325" y2="105" stroke="#8b4513" stroke-width="2"/>
    <path d="M320,105 Q325,100 330,105" fill="#e53e3e" opacity="0.7"/>
  </g>
  
  <!-- Window frame -->
  <rect x="220" y="30" width="150" height="100" fill="none" stroke="#2d3748" stroke-width="3"/>
  <line x1="295" y1="30" x2="295" y2="130" stroke="#2d3748" stroke-width="2"/>
  <line x1="220" y1="80" x2="370" y2="80" stroke="#2d3748" stroke-width="2"/>
  
  <!-- King Size Bed -->
  <rect x="30" y="100" width="140" height="90" fill="url(#luxuryBed)" rx="10"/>
  <rect x="35" y="105" width="130" height="80" fill="#ffffff" rx="6"/>
  
  <!-- Luxury Pillows -->
  <rect x="45" y="110" width="30" height="18" fill="#4299e1" rx="4"/>
  <rect x="80" y="110" width="30" height="18" fill="#4299e1" rx="4"/>
  <rect x="115" y="110" width="30" height="18" fill="#4299e1" rx="4"/>
  
  <!-- Throw pillows -->
  <rect x="60" y="135" width="20" height="15" fill="#e53e3e" rx="3"/>
  <rect x="100" y="135" width="20" height="15" fill="#ffd700" rx="3"/>
  
  <!-- Luxury Bedside Tables -->
  <rect x="180" y="120" width="35" height="50" fill="#8b4513"/>
  <rect x="185" y="115" width="25" height="8" fill="#a0522d"/>
  <circle cx="197" cy="130" r="3" fill="#ffd700"/>
  
  <!-- Designer Lamp -->
  <rect x="192" y="100" width="8" height="20" fill="#2d3748"/>
  <ellipse cx="196" cy="95" rx="12" ry="8" fill="#ffd700" opacity="0.8"/>
  
  <!-- Seating Area -->
  <rect x="20" y="200" width="80" height="40" fill="#4299e1" rx="6"/>
  <rect x="25" y="195" width="70" height="8" fill="#3182ce"/>
  
  <!-- Coffee Table -->
  <rect x="110" y="210" width="40" height="25" fill="#8b4513" rx="3"/>
  <rect x="115" y="205" width="30" height="5" fill="#a0522d"/>
  
  <!-- Decorative items on coffee table -->
  <circle cx="125" cy="215" r="3" fill="#e53e3e"/>
  <rect x="135" y="212" width="8" height="6" fill="#38a169"/>
  
  <!-- Wall Art -->
  <rect x="80" y="40" width="50" height="35" fill="#2d3748" stroke="#4a5568" stroke-width="2"/>
  <rect x="85" y="45" width="40" height="25" fill="#4299e1" opacity="0.6"/>
  
  <!-- Luxury TV -->
  <rect x="250" y="150" width="80" height="45" fill="#2d3748" rx="4"/>
  <rect x="255" y="155" width="70" height="35" fill="#1a202c"/>
  
  <!-- Balcony Door -->
  <rect x="350" y="140" width="40" height="80" fill="#87ceeb" opacity="0.3" stroke="#2d3748" stroke-width="2"/>
  <circle cx="385" cy="180" r="2" fill="#ffd700"/>
  
  <!-- Curtains -->
  <rect x="210" y="20" width="20" height="120" fill="#4299e1" opacity="0.4"/>
  <rect x="360" y="20" width="20" height="120" fill="#4299e1" opacity="0.4"/>
  
  <!-- Luxury Carpet -->
  <ellipse cx="100" cy="240" rx="70" ry="30" fill="#9f7aea" opacity="0.4"/>
  <ellipse cx="100" cy="240" rx="50" ry="20" fill="#805ad5" opacity="0.3"/>
  
  <!-- Room Lighting -->
  <circle cx="150" cy="20" r="18" fill="#ffd700" opacity="0.6"/>
  <circle cx="300" cy="20" r="15" fill="#ffd700" opacity="0.5"/>
  
  <!-- Minibar -->
  <rect x="320" y="200" width="25" height="35" fill="#2d3748"/>
  <rect x="322" y="202" width="21" height="31" fill="#4a5568"/>
  <circle cx="340" cy="217" r="2" fill="#ffd700"/>
</svg>