<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="suiteRoomBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f7fafc"/>
      <stop offset="100%" style="stop-color:#edf2f7"/>
    </linearGradient>
    <linearGradient id="oceanView" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87ceeb"/>
      <stop offset="30%" style="stop-color:#4299e1"/>
      <stop offset="70%" style="stop-color:#3182ce"/>
      <stop offset="100%" style="stop-color:#2c5282"/>
    </linearGradient>
    <linearGradient id="luxurySuite" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff"/>
      <stop offset="100%" style="stop-color:#f8f9fa"/>
    </linearGradient>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#e6fffa"/>
      <stop offset="100%" style="stop-color:#b2f5ea"/>
    </linearGradient>
  </defs>
  
  <!-- Suite Background -->
  <rect width="400" height="300" fill="url(#suiteRoomBg)"/>
  
  <!-- Premium Marble Floor -->
  <rect x="0" y="200" width="400" height="100" fill="#f8f9fa"/>
  <g opacity="0.4">
    <path d="M0,210 Q120,200 240,210 T400,210" stroke="#cbd5e0" stroke-width="2" fill="none"/>
    <path d="M0,230 Q180,220 360,230 T400,230" stroke="#cbd5e0" stroke-width="2" fill="none"/>
    <path d="M0,250 Q100,245 200,250 T400,250" stroke="#cbd5e0" stroke-width="2" fill="none"/>
    <circle cx="100" cy="220" r="8" fill="#e2e8f0" opacity="0.5"/>
    <circle cx="300" cy="240" r="6" fill="#e2e8f0" opacity="0.5"/>
  </g>
  
  <!-- Back Wall -->
  <rect x="0" y="0" width="400" height="200" fill="#e2e8f0"/>
  
  <!-- Panoramic Ocean Window -->
  <rect x="180" y="20" width="200" height="120" fill="url(#skyGradient)" stroke="#2d3748" stroke-width="4"/>
  
  <!-- Ocean View -->
  <rect x="180" y="60" width="200" height="80" fill="url(#oceanView)"/>
  
  <!-- Sky -->
  <rect x="180" y="20" width="200" height="40" fill="url(#skyGradient)"/>
  
  <!-- Ocean elements -->
  <g opacity="0.9">
    <!-- Waves -->
    <path d="M180,120 Q220,115 260,120 T380,120" stroke="#ffffff" stroke-width="2" fill="none" opacity="0.6"/>
    <path d="M180,130 Q240,125 300,130 T380,130" stroke="#ffffff" stroke-width="1" fill="none" opacity="0.4"/>
    
    <!-- Distant islands -->
    <ellipse cx="250" cy="100" rx="20" ry="8" fill="#2d3748" opacity="0.3"/>
    <ellipse cx="320" cy="95" rx="15" ry="6" fill="#2d3748" opacity="0.2"/>
    
    <!-- Seagulls -->
    <path d="M220,40 Q225,35 230,40" stroke="#2d3748" stroke-width="1" fill="none"/>
    <path d="M340,45 Q345,40 350,45" stroke="#2d3748" stroke-width="1" fill="none"/>
    
    <!-- Clouds -->
    <circle cx="200" cy="35" r="8" fill="#ffffff" opacity="0.7"/>
    <circle cx="210" cy="35" r="6" fill="#ffffff" opacity="0.7"/>
    <circle cx="360" cy="30" r="10" fill="#ffffff" opacity="0.6"/>
  </g>
  
  <!-- Window frame -->
  <rect x="180" y="20" width="200" height="120" fill="none" stroke="#2d3748" stroke-width="4"/>
  <line x1="280" y1="20" x2="280" y2="140" stroke="#2d3748" stroke-width="3"/>
  <line x1="180" y1="80" x2="380" y2="80" stroke="#2d3748" stroke-width="3"/>
  
  <!-- King Size Bed with Premium Bedding -->
  <rect x="20" y="90" width="150" height="100" fill="url(#luxurySuite)" rx="12"/>
  <rect x="25" y="95" width="140" height="90" fill="#ffffff" rx="8"/>
  
  <!-- Luxury Pillows -->
  <rect x="35" y="100" width="35" height="20" fill="#4299e1" rx="5"/>
  <rect x="75" y="100" width="35" height="20" fill="#4299e1" rx="5"/>
  <rect x="115" y="100" width="35" height="20" fill="#4299e1" rx="5"/>
  
  <!-- Decorative Pillows -->
  <rect x="50" y="125" width="25" height="18" fill="#e53e3e" rx="4"/>
  <rect x="85" y="125" width="25" height="18" fill="#ffd700" rx="4"/>
  <rect x="120" y="125" width="25" height="18" fill="#9f7aea" rx="4"/>
  
  <!-- Sofa Bed Area -->
  <rect x="20" y="210" width="100" height="50" fill="#4299e1" rx="8"/>
  <rect x="25" y="205" width="90" height="10" fill="#3182ce"/>
  
  <!-- Coffee Table -->
  <rect x="130" y="220" width="50" height="30" fill="#8b4513" rx="4"/>
  <rect x="135" y="215" width="40" height="8" fill="#a0522d"/>
  
  <!-- Luxury items on coffee table -->
  <circle cx="145" cy="230" r="4" fill="#ffd700"/>
  <rect x="155" y="225" width="12" height="8" fill="#38a169"/>
  <circle cx="170" cy="235" r="3" fill="#e53e3e"/>
  
  <!-- Premium Bedside Tables -->
  <rect x="180" y="110" width="40" height="60" fill="#8b4513"/>
  <rect x="185" y="105" width="30" height="10" fill="#a0522d"/>
  <circle cx="200" cy="125" r="4" fill="#ffd700"/>
  <circle cx="200" cy="140" r="3" fill="#ffd700"/>
  
  <!-- Designer Lamp -->
  <rect x="195" y="85" width="10" height="25" fill="#2d3748"/>
  <ellipse cx="200" cy="78" rx="15" ry="10" fill="#ffd700" opacity="0.9"/>
  
  <!-- Kitchenette -->
  <rect x="300" y="200" width="80" height="50" fill="#4a5568"/>
  <rect x="305" y="195" width="70" height="8" fill="#2d3748"/>
  
  <!-- Kitchen appliances -->
  <rect x="310" y="205" width="15" height="20" fill="#2d3748"/>
  <rect x="330" y="205" width="15" height="20" fill="#2d3748"/>
  <rect x="350" y="205" width="20" height="20" fill="#2d3748"/>
  <circle cx="320" cy="210" r="2" fill="#e53e3e"/>
  <circle cx="340" cy="210" r="2" fill="#38a169"/>
  
  <!-- Wall Art -->
  <rect x="60" y="30" width="60" height="40" fill="#2d3748" stroke="#4a5568" stroke-width="3"/>
  <rect x="65" y="35" width="50" height="30" fill="#4299e1" opacity="0.7"/>
  <circle cx="90" cy="50" r="8" fill="#ffd700" opacity="0.8"/>
  
  <!-- Premium TV -->
  <rect x="240" y="160" width="100" height="60" fill="#2d3748" rx="6"/>
  <rect x="245" y="165" width="90" height="50" fill="#1a202c"/>
  
  <!-- Balcony Access -->
  <rect x="350" y="150" width="50" height="100" fill="#87ceeb" opacity="0.2" stroke="#2d3748" stroke-width="3"/>
  <circle cx="390" cy="200" r="3" fill="#ffd700"/>
  <rect x="355" y="155" width="40" height="90" fill="none" stroke="#2d3748" stroke-width="1"/>
  
  <!-- Luxury Curtains -->
  <rect x="170" y="10" width="25" height="140" fill="#4299e1" opacity="0.3"/>
  <rect x="370" y="10" width="25" height="140" fill="#4299e1" opacity="0.3"/>
  
  <!-- Premium Carpet -->
  <ellipse cx="120" cy="250" rx="80" ry="35" fill="#9f7aea" opacity="0.5"/>
  <ellipse cx="120" cy="250" rx="60" ry="25" fill="#805ad5" opacity="0.4"/>
  <ellipse cx="120" cy="250" rx="40" ry="15" fill="#6b46c1" opacity="0.3"/>
  
  <!-- Chandelier -->
  <circle cx="120" cy="15" r="20" fill="#ffd700" opacity="0.7"/>
  <circle cx="120" cy="15" r="15" fill="#ffffff" opacity="0.5"/>
  <g stroke="#ffd700" stroke-width="1" opacity="0.6">
    <line x1="120" y1="35" x2="120" y2="45"/>
    <line x1="105" y1="25" x2="95" y2="35"/>
    <line x1="135" y1="25" x2="145" y2="35"/>
    <line x1="110" y1="35" x2="100" y2="45"/>
    <line x1="130" y1="35" x2="140" y2="45"/>
  </g>
  
  <!-- Wine Bar -->
  <rect x="350" y="180" width="30" height="40" fill="#8b4513"/>
  <rect x="355" y="175" width="20" height="8" fill="#a0522d"/>
  <circle cx="365" cy="185" r="2" fill="#e53e3e"/>
  <circle cx="365" cy="195" r="2" fill="#ffd700"/>
  <circle cx="365" cy="205" r="2" fill="#38a169"/>
</svg>