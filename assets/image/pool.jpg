<svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
<defs>
<linearGradient id="poolGradient" x1="0%" y1="0%" x2="100%" y2="100%">
<stop offset="0%" style="stop-color:#dbeafe;stop-opacity:1" />
<stop offset="100%" style="stop-color:#0ea5e9;stop-opacity:1" />
</linearGradient>
</defs>
<rect width="400" height="300" fill="url(#poolGradient)"/>
<!-- Pool -->
<ellipse cx="200" cy="180" rx="150" ry="60" fill="#0284c7"/>
<ellipse cx="200" cy="175" rx="140" ry="55" fill="#0ea5e9"/>
<ellipse cx="200" cy="170" rx="130" ry="50" fill="#38bdf8"/>
<!-- Pool Deck -->
<rect x="0" y="240" width="400" height="40" fill="#a3a3a3"/>
<!-- Pool Chairs -->
<rect x="80" y="120" width="40" height="20" fill="#dc2626"/>
<rect x="280" y="120" width="40" height="20" fill="#dc2626"/>
<!-- Umbrellas -->
<circle cx="100" cy="100" r="25" fill="#ef4444"/>
<line x1="100" y1="125" x2="100" y2="160" stroke="#7c2d12" stroke-width="4"/>
<circle cx="300" cy="100" r="25" fill="#ef4444"/>
<line x1="300" y1="125" x2="300" y2="160" stroke="#7c2d12" stroke-width="4"/>
<!-- Pool Bar -->
<rect x="320" y="200" width="60" height="30" fill="#7c2d12"/>
<rect x="325" y="205" width="50" height="20" fill="#a3a3a3"/>
<!-- Palm Trees -->
<circle cx="50" cy="80" r="20" fill="#16a34a"/>
<line x1="50" y1="100" x2="50" y2="160" stroke="#7c2d12" stroke-width="6"/>
<circle cx="350" cy="80" r="20" fill="#16a34a"/>
<line x1="350" y1="100" x2="350" y2="160" stroke="#7c2d12" stroke-width="6"/>
<text x="200" y="270" text-anchor="middle" fill="#f8fafc" font-family="Arial" font-size="16" font-weight="bold">Infinity Pool</text>
</svg>